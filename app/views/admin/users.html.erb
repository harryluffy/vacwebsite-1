<h1 class="fontColor1 bowlby">ADMIN - USERS</h1>
<div class="row">
  <div class="col-12 mx-auto d-block">
    <p>Showing <%= @users.size %> results.</p>
    <table>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>E-mail</th>
        <th></th>
      </tr>
      <% @users.each do |u|  %>
      <tr>
        <td><%= u.firstname  %></td>
        <td><%= u.lastname %></td>
        <td><%= u.email %></td>
        <td><%= link_to "Delete", delete_user_path(u.id), method: 'delete' %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>