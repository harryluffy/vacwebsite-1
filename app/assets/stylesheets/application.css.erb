body {
    height: 100%;
    margin: 0;
    background-image: url(<%= image_path "digitalcamo_dark.jpg" %>);
}

.bg-navyblue {
    background-color: #232360;
}

.visdbg {
    border-style: dashed; 
    border-color: white;
}

hr {
  border-color: #c60651;
  border-style: solid none;
  border-width: 1px 0;
}

#introStatement {
    padding: 2%;
}

#introvid {
    padding: 2%;
    border: 3px solid #c60651;
    background-color: black;
}

#heart {
    margin: -10px;
}

#index {
    background: linear-gradient(#c9c9e2 1%, #fff 40%);
}

#introDesc {
    padding: 5% 10%;
}

.btnpad {
    padding:5px 10px;
}

.shortcut {
    margin:2%;
    padding:10%;
    border: 2px solid #c60651;
    border-radius: 20px;
}

.shortcut a:hover {
    text-decoration: none;
}

.flasherrors {
    border: 1px solid #f00;
    border-radius: 5px;
    background-color: #ffcccc;
    padding: 1%;
}

.flashgreen {
    border: 1px solid #009921;
    border-radius: 5px;
    background-color: #ccffd7;
    padding: 1%;
}

footer {
    background-color: #c60651;
    padding: 2%;
}

.parentbox {
    text-align: center;
    font: 0/0 a;
}

.parentbox:before {
    content: ' ';
    display: inline-block;
    vertical-align: middle;
    height: 100%;
}

.childbox {
    display: inline-block;
    vertical-align: middle;
}