body {
    height: 100%;
    margin: 0;
    background-image: url(<%= image_path "digitalcamo_dark.jpg" %>);
}

.bg-navyblue {
    background-color: #232360;
}

.visdbg {
    border-style: dashed; 
    border-color: white;
}

hr {
  border-color: #c60651;
  border-style: solid none;
  border-width: 1px 0;
}

#introStatement {
    padding: 2%;
}

#introvid {
    padding: 2%;
    border: 3px solid #c60651;
    background-color: black;
}

#heart {
    margin: -10px;
}

#index {
    background: linear-gradient(#9191ba 1%, #fff 40%);
}

#introDesc {
    padding: 5% 10%;
}

.shortcut {
    margin:2%;
    padding:10%;
    border: 2px solid #c60651;
    border-radius: 20px;
}

.shortcut a:hover {
    text-decoration: none;
}

footer {
    background-color: #c60651;
    padding: 2%;
}